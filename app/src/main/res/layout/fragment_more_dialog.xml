<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_circle_corner_bottom_dialog_white_12"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="13dp"
    android:paddingEnd="13dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="17dp"
        android:gravity="center"
        android:text="@string/more"
        android:textColor="@color/foreground_main_color_2"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dlna"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:text="@string/play_on_tv"
            android:textColor="@color/foreground_main_color_2"
            android:textSize="12sp"
            app:drawableTopCompat="@drawable/ic_live_tv_main_color_2_24" />

        <TextView
            android:id="@+id/tv_open_in_other_player"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:text="@string/open_by_external_player"
            android:textColor="@color/foreground_main_color_2"
            android:textSize="12sp"
            app:drawableTint="@color/foreground_main_color_2"
            app:drawableTopCompat="@drawable/ic_play_circle_white_24" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_cancel_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="17dp"
        android:text="@string/cancel"
        android:textColor="@color/foreground_main_color_2"
        android:textSize="14sp" />

</LinearLayout>