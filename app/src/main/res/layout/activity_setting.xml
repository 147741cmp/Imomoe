<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.SettingActivity">

    <LinearLayout
        android:id="@+id/ll_setting_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main_color_2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_setting_activity_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:background="?android:selectableItemBackground"
            android:padding="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_arrow_back_white_24"
            app:layout_constraintStart_toStartOf="parent" />

        <com.skyd.imomoe.view.widget.TypefaceTextView
            android:id="@+id/tv_setting_activity_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@string/setting"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_setting_activity_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:paddingHorizontal="15dp"
                android:paddingVertical="15dp">

                <ImageView
                    android:id="@+id/iv_setting_activity_update"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_update_main_color_2_24" />

                <com.skyd.imomoe.view.widget.TypefaceTextView
                    android:id="@+id/tv_setting_activity_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@id/iv_setting_activity_update"
                    android:text="@string/check_update"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <com.skyd.imomoe.view.widget.TypefaceTextView
                    android:id="@+id/tv_setting_activity_update_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@id/tv_setting_activity_update"
                    android:text="@string/check_update"
                    android:textColor="@color/main_color"
                    android:textSize="15sp" />

                <com.skyd.imomoe.view.widget.TypefaceTextView
                    android:id="@+id/tv_setting_activity_update_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_setting_activity_update"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@id/iv_setting_activity_update"
                    android:textColor="@color/gray_1"
                    android:textSize="12sp"
                    tools:text="V 1.0.0" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_activity_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:paddingHorizontal="15dp"
                android:paddingVertical="15dp">

                <ImageView
                    android:id="@+id/iv_setting_activity_about"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_info_main_color_2_24" />

                <com.skyd.imomoe.view.widget.TypefaceTextView
                    android:id="@+id/tv_setting_activity_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@id/iv_setting_activity_about"
                    android:text="@string/about"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <com.skyd.imomoe.view.widget.TypefaceTextView
                    android:id="@+id/tv_setting_activity_about_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_setting_activity_about"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@id/iv_setting_activity_about"
                    android:text="@string/app_name"
                    android:textColor="@color/gray_1"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>