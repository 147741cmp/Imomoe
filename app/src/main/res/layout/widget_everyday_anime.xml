<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_circle_corner_top_main_color_2_7"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_widget_everyday_anime_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"
            android:textColor="@color/foreground_white"
            android:textSize="20sp"
            tools:text="周一" />

        <ImageView
            android:id="@+id/iv_widget_everyday_anime_refresh"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="?android:selectableItemBackground"
            android:paddingHorizontal="13dp"
            android:src="@drawable/ic_refresh_white_24" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_widget_everyday_anime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_circle_corner_bottom_white_7" />
</LinearLayout>