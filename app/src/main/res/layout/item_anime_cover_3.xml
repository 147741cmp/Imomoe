<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:paddingBottom="3dp">

    <com.skyd.imomoe.view.widget.RoundCornersImageView
        android:id="@+id/iv_anime_cover_3_cover"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_background" />

    <com.skyd.imomoe.view.widget.TypefaceTextView
        android:id="@+id/tv_anime_cover_3_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="16dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/iv_anime_cover_3_cover"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="中二病也要谈恋爱！" />

    <com.skyd.imomoe.view.widget.TypefaceTextView
        android:id="@+id/tv_anime_cover_3_alias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/tv_anime_cover_3_title"
        app:layout_constraintTop_toBottomOf="@id/tv_anime_cover_3_title"
        tools:text="别名" />

    <com.skyd.imomoe.view.widget.TypefaceTextView
        android:id="@+id/tv_anime_cover_3_episode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/main_color"
        android:textSize="12sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/tv_anime_cover_3_alias"
        app:layout_constraintTop_toBottomOf="@id/tv_anime_cover_3_alias"
        tools:text="全12集" />

    <com.nex3z.flowlayout.FlowLayout
        android:id="@+id/fl_anime_cover_3_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        app:flChildSpacing="5dp"
        app:flRowSpacing="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/tv_anime_cover_3_title"
        app:layout_constraintTop_toBottomOf="@id/tv_anime_cover_3_episode" />

    <com.skyd.imomoe.view.widget.TypefaceTextView
        android:id="@+id/tv_anime_cover_3_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/gray_1"
        android:textSize="12sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/tv_anime_cover_3_title"
        app:layout_constraintTop_toBottomOf="@id/fl_anime_cover_3_type"
        tools:text="春天，新生入学后开始考虑要加入哪个社团的时候—— 田井中律被从小一起长大的玩伴秋山澪带到轻音部见习。" />
</androidx.constraintlayout.widget.ConstraintLayout>