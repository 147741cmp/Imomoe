<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingTop="20dp">

    <com.skyd.imomoe.view.widget.TypefaceTextView
        android:id="@+id/tv_progress_bar_2_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main_color_2"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="标题" />

    <ProgressBar
        android:id="@+id/pb_progress_bar_2_dialog"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="7dp"
        android:scrollbarStyle="insideInset"
        app:layout_constraintEnd_toStartOf="@id/tv_progress_bar_2_dialog_describe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_progress_bar_2_dialog_title" />

    <com.skyd.imomoe.view.widget.TypefaceTextView
        android:id="@+id/tv_progress_bar_2_dialog_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/main_color_2"
        app:layout_constraintBottom_toBottomOf="@id/pb_progress_bar_2_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/pb_progress_bar_2_dialog"
        tools:text="100%" />
</androidx.constraintlayout.widget.ConstraintLayout>