<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="6dp"
    android:paddingEnd="16dp"
    android:paddingBottom="6dp">

    <com.skyd.imomoe.view.widget.textview.TypefaceTextView
        android:id="@+id/tv_anime_cover_7_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="7dp"
        android:layout_toStartOf="@id/tv_anime_cover_7_size"
        android:ellipsize="marquee"
        android:focusable="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="@color/foreground_main_color_2"
        android:textSize="17sp"
        app:typeface="bPRTypeface"
        tools:text="Endro~" />

    <com.skyd.imomoe.view.widget.textview.TypefaceTextView
        android:id="@+id/tv_anime_cover_7_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/tv_anime_cover_7_episodes"
        android:adjustViewBounds="true"
        android:ellipsize="marquee"
        android:focusable="true"
        android:gravity="end"
        android:marqueeRepeatLimit="marquee_forever"
        android:minWidth="45dp"
        android:singleLine="true"
        android:textColor="@color/main_color"
        app:typeface="bPRTypeface"
        tools:text="300M" />

    <com.skyd.imomoe.view.widget.textview.TypefaceTextView
        android:id="@+id/tv_anime_cover_7_episodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="2dp"
        android:textColor="@color/foreground_main_color_2"
        android:textSize="15sp"
        app:typeface="bPRTypeface"
        tools:text="12P" />

</RelativeLayout>