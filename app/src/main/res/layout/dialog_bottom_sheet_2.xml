<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.skyd.imomoe.view.widget.TypefaceTextView
        android:id="@+id/tv_dialog_bottom_sheet_2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/play_list"
        android:textColor="@color/main_color_2"
        android:textSize="17sp" />

    <com.skyd.imomoe.view.widget.BottomSheetRecyclerView
        android:id="@+id/rv_dialog_bottom_sheet_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
